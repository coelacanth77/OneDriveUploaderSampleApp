<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OneDriveUploaderSample.UploadPage">
    <StackLayout>
        <Label x:Name="description" Text="画像を選択してください。" 
           VerticalOptions="Center" 
           HorizontalOptions="Center" />
        <Button x:Name="selectImageButton" Text="画像を選択する" Clicked="selectImageButton_Clicked"/>
        <Image x:Name="imageControll" />
        <Button x:Name="uploadImageButton" Text="画像をアップロードする" Clicked="uploadImageButton_Clicked" IsVisible="False"/>
        <Label x:Name="result" Text="" />
    </StackLayout>
</ContentPage>